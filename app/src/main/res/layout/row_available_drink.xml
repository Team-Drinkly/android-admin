<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageView_available_drink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        app:shapeAppearanceOverlay="@style/RoundSector20"
        android:layout_marginTop="5dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/button_delete"
        app:srcCompat="@drawable/background_gray3_radius20" />

    <ImageView
        android:id="@+id/button_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_delete" />

    <TextView
        android:id="@+id/textView_drink"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background_white_radius10_stroke_gray3"
        android:paddingVertical="11.5dp"
        android:text="주류명"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/imageView_available_drink"
        app:layout_constraintStart_toStartOf="@+id/imageView_available_drink"
        app:layout_constraintEnd_toEndOf="@+id/imageView_available_drink" />
</androidx.constraintlayout.widget.ConstraintLayout>